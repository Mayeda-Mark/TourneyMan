<editSlots>
    <form action="verifyParticipants" name="createSlots" method="POST" id="createSlots">
        {{#each slots}}
        Name {{inc @index}}: <input type="text" name="slots[{{@index}}][name]" maxlength="20" size="21" value={{this.name}}>
        <input type="hidden" name="slots[{{@index}}][id]" value={{this.id}}>
        <br>
        {{/each}}
        <input type="hidden" name="tourneyId" value={{tourneyId}}>
        <button type="submit" form="createSlots" class="btn">Submit</button>
    </form>
</editSlots>

